{
    "manifest_version": 2,
    "name": "Looped In",
    "version": "0.1.0",
    "description": "Shows conversations on Hacker News about the current web page",
    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "main.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/icon.svg",
            "32": "icons/icon.svg"
        }
    },
    "content_security_policy": "script-src 'self'; object-src 'self'; default-src 'self' http://hn.algolia.com/*"
}
